mixin card(img, title, text)
    .card.rounded-4.swiper-slide
        .card-image
            img.w-100(src=img)
        .card-body.text-center
            span.card-title.fs-5=title

section.py-5
    .container.px-3.px-md-5
        .row.justify-content-center
            .text-center.my-5
                    span.display-5.d-inline.fw-bolder Перевозимая техника
        .swiper.objects-swiper.mb-4
            .swiper-wrapper
                +card("@img/bike.jpg", "Мототехника")
                +card("@img/passenger.jpg", "Легковые авто")
                +card("@img/offroad.jpg", "Внедорожники")
                +card("@img/bus.jpg", "Микроавтобусы")
        .d-flex.align-items-center.justify-content-center.gap-5
            button.btn.btn-lg#obj-sw-left
                i.bi.bi-chevron-left
            button.btn.btn-lg#obj-sw-right
                i.bi.bi-chevron-right