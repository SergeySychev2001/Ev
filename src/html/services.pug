mixin list-item(text, margin, price, icon_style)
    div(class = margin ? "mb-2" : "")
        i.bi.bi-check-circle-fill.me-1(class = icon_style)
        span.me-1=text
        span.fw-bolder=price


section.py-5
    .container.px-5
        .row.justify-content-center
            .text-center.my-5
                    span.display-5.d-inline.fw-bolder Услуги
        .row.g-4.mb-4
            .col-sm-12.col-md-6.mb-5 
                .card.shadow.border-0.rounded-4
                    .card-body.p-5
                        .h3.fw-bolder.text-primary.mb-4
                            span.d-inline Основные
                        .d-flex.flex-column
                            +list-item("Эвакуация лековых авто", true, "1500руб", "text-primary")
                            +list-item("Эвакуация внедорожников (до 3т.)", true, "2000руб", "text-primary")
                            +list-item("Эвакуация мототехники", true, "1000руб", "text-primary")
                            +list-item("Эвакуация микроавтобусов (до 3т.)", false, "2000руб", "text-primary")
            .col-sm-12.col-md-6.mb-5 
                .card.shadow.border-0.rounded-4
                    .card-body.p-5
                        .h3.fw-bolder.text-secondary.mb-4
                            span.d-inline Дополнительные
                        .d-flex.flex-column
                            +list-item("Заблокированное колесо", true, "500руб/шт", "text-secondary")
                            +list-item("Простой эвакуатора", true, "500руб/час", "text-secondary")
                            +list-item("Ложный вызов", true, "1000руб", "text-secondary")
                            +list-item("Межгород", false, "50руб/км", "text-secondary")
                                